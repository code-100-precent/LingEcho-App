        "width": 1200,
        "height": 800,
        "minWidth": 800,
        "minHeight": 600
      },
              {
                "label": "desktop-pet",
                "title": "",
                "url": "/desktop-pet-window",
                "width": 250,
                "height": 280,
                "fullscreen": false,
                "transparent": true,
                "alwaysOnTop": true,
                "skipTaskbar": true,
                "decorations": false,
                "resizable": false,
                "visible": true,
                "x": 1200,
                "y": 600,
                "focus": false,
                "center": false,
                "minWidth": 250,
                "minHeight": 280,
                "maxWidth": 250,
                "maxHeight": 280
              }
    ]
